{
    "name": "MYOP Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode-remote.remote-containers",
                "anthropic.claude-code"
            ]
        }
    },
    "postCreateCommand": {
        "addMyopMCP": "claude mcp add myop https://mcp.myop.dev/mcp --transport http --scope user",
        "installMyopCLI": "sudo npm install -g @myop/cli"
    }
}